% 1 inch margines at left and right
\oddsidemargin=1truein
\evensidemargin=1truein
\textwidth=6.8truein	% A4 paper is 8.25in wide
% 1 inch margins at top and bottom:
\headheight=0truein
\topmargin=1truein
\textheight=9.5truein	% A4 paper is 11.7in high
\hoffset -1truein
\voffset -1truein

